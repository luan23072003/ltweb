@model List<wwââ.Models.PhanLoai>
<main>
    <h2>New Arrivals</h2>
    <h5>Nguyễn Thành Luân</h5>
    <!-- Dropdowns for Main Category and Subcategory -->
    <div class="dropdown-container">
        <div class="form-group">
            <label for="mainCategory">Phân loại chính:</label>
            <select class="form-control" id="mainCategory" name="mainCategory">
                <option value="">Tất cả sản phẩm</option>
                @foreach (var phanLoai in Model)
                {
                    <option value="@phanLoai.MaPhanLoai">@phanLoai.PhanLoaiChinh</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="subCategory">Phân loại phụ:</label>
            <select class="form-control" id="subCategory" name="subCategory">
                <option value="">Tất cả sản phẩm</option>
                <!-- Options for Subcategory will be populated dynamically based on the selected Main Category -->
            </select>
        </div>
    </div>

    <button><a href="~/Home/Create">Thêm sản phẩm mới</a></button>
    <div id="menu">
        <ul>
            <li><a href="#">Tất cả sản phẩm</a></li>
            @foreach (var phanLoai in Model)
            {
                <li>
                    <a class="nav-link subcategory-link" href="#" data-category-id="@phanLoai.MaPhanLoai" onclick="handleClick('@phanLoai.MaPhanLoai')">
                        <strong>@phanLoai.PhanLoaiChinh</strong>
                    </a>
                </li>
            }
        </ul>


    </div>
    <div id="product-list">
        @foreach (var phanLoai in Model)
        {
            <div class="product-items">
                @foreach (var sanPham in phanLoai.SanPhams)
                {
                    <div class="product-item category-@phanLoai.MaPhanLoai" data-product-id="@sanPham.MaPhanLoai">
                        <h4>@sanPham.TenSanPham</h4>
                        <a href="/Home/Details/@sanPham.MaSanPham"><img id="trow_@sanPham.MaSanPham" src="~/Content/@sanPham.AnhDaiDien" alt="@sanPham.TenSanPham" /> </a>
                        <a href="/Home/Edit/@sanPham.MaSanPham"><button id="trow_@sanPham.MaSanPham">Sửa</button></a>

                    </div>
                }
            </div>
        }
    </div>
    @section scripts {
        <script>
        $(document).ready(function () {
            // Xử lý sự kiện khi lựa chọn Phân loại chính thay đổi
            $('#mainCategory').change(function () {
                var mainCategoryId = $(this).val();
                console.log("Main Category ID: " + mainCategoryId);
                // Gửi yêu cầu AJAX để lấy danh sách Phân loại phụ dựa trên Phân loại chính
                $.ajax({
                    url: '@Url.Action("GetSubcategories", "Home")',
                    type: 'GET',
                    data: { mainCategoryId: mainCategoryId },
                    success: function (data) {
                        // Xóa tất cả các option hiện tại
                        $('#subCategory').empty();

                        // Thêm option mặc định
                        $('#subCategory').append($('<option>', {
                            value: "",
                            text: "Tất cả sản phẩm"
                        }));

                        // Thêm các option mới từ dữ liệu nhận được
                        $.each(data, function (index, subCategory) {
                            $('#subCategory').append($('<option>', {
                                value: subCategory.MaPhanLoaiPhu,
                                text: subCategory.TenPhanLoaiPhu
                            }));
                        });
                    },
                    error: function () {
                        console.log('Failed to retrieve subcategories.');
                    }
                });
            });
        });
        </script>
    }
</main>